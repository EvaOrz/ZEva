    <!--android:width的值必须要小于用它做背景的View的height-->
    <stroke
        android:width="@dimen/line_height"
        android:color="@color/gray_line"
        android:dashGap="0sp"

        android:dashWidth="0dp" />
    <padding
        android:left="10dp"
        android:right="10dp" />

</shape>