<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/body_gray"
        android:padding="10dp">

        <ImageView
            android:id="@+id/code_use_back"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:src="@drawable/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="兑换团购邀请码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />


    </RelativeLayout>


    <EditText
        android:id="@+id/code_use_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/gray_bodybg_circle_xiankuang"
        android:hint="@string/pingtuan_hint1"

        android:padding="10dp"
        android:textColor="@color/gray_dark"
        android:textColorHint="@color/gray_light"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/code_use_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/gray_circle"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:text="@string/sure"
        android:textColor="@color/white" />


</LinearLayout>