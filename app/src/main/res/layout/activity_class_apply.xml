<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/top"
        layout="@layout/layout_toolbar" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:text="原在班级"
        app:layout_constraintTop_toBottomOf="@id/top" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/old_layout"
        android:background="@drawable/draw_gray_line_bg"
        app:layout_constraintTop_toBottomOf="@id/old">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/o_pic"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/home_head_hot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/o_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="二年级大语文"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@id/o_arrow"
            app:layout_constraintStart_toEndOf="@id/o_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/o_teacher_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="祝芒芒"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/o_arrow"
            app:layout_constraintStart_toEndOf="@id/o_pic"
            app:layout_constraintTop_toBottomOf="@id/o_course_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/o_school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="北京大学"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/o_arrow"
            app:layout_constraintStart_toEndOf="@id/o_pic"
            app:layout_constraintTop_toBottomOf="@id/o_teacher_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/o_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2017.3.19-2017.4.19"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/o_arrow"
            app:layout_constraintStart_toEndOf="@id/o_pic"
            app:layout_constraintTop_toBottomOf="@id/o_school_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/o_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:text="8:00-10:00"
            android:textColor="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/o_arrow"
            app:layout_constraintStart_toEndOf="@id/o_pic"
            app:layout_constraintTop_toBottomOf="@id/o_date" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/o_arrow"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:scaleType="center"
            android:src="@mipmap/home_header_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:text="将转班级"
        app:layout_constraintTop_toBottomOf="@id/old_layout" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/draw_gray_line_bg"
        app:layout_constraintTop_toBottomOf="@id/now">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pic"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/home_head_hot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="二年级大语文"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintStart_toEndOf="@id/pic"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/teacher_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="祝芒芒"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintStart_toEndOf="@id/pic"
            app:layout_constraintTop_toBottomOf="@id/course_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="北京大学"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintStart_toEndOf="@id/pic"
            app:layout_constraintTop_toBottomOf="@id/teacher_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2017.3.19-2017.4.19"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintStart_toEndOf="@id/pic"
            app:layout_constraintTop_toBottomOf="@id/school_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:text="8:00-10:00"
            android:textColor="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintStart_toEndOf="@id/pic"
            app:layout_constraintTop_toBottomOf="@id/date" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:scaleType="center"
            android:src="@mipmap/home_header_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_yellow"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="确认提交"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>