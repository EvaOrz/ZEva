<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/gray_white_xiankuang"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/dp_10">

    <cn.com.zwwl.bayuwen.widget.CircleImageView
        android:id="@+id/course_cover"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_60"
        android:scaleType="fitXY"
        android:src="@mipmap/image_placeholder"
        app:borderRadius="@dimen/dp_5"
        app:isEdge="true"
        app:type="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#343434"
            android:textSize="@dimen/text_size_14" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/course_chapter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/text_size_12" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/look_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/complete_course_see_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="@string/look_detail"
            android:textColor="@color/lisichen"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>

</LinearLayout>


