<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/item_order_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gold_circle"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="面授"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/item_order_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="二年级春季大语文"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/item_order_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/gray_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_order_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="张国庆、王兴伟"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/item_order_xiaoqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="大钟寺校区"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/item_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="2017年3月15日 至 2018年5月18日"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/item_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="每天16：00 - 18：00"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>