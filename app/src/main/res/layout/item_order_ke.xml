<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/body_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/item_oder_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_oder_tag"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/item_oder_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="二年级春季大语文"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_oder_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="张国庆、王兴伟"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_10" />


        <TextView
            android:id="@+id/item_oder_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="2017年3月15日 至 2018年5月18日"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_oder_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="每天16：00 - 18：00"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/item_oder_xiaoqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:text="大钟寺校区"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

