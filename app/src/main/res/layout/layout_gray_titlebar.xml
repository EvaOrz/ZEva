<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main2_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/left_more_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@color/gray_dark" />

    <FrameLayout
        android:id="@+id/frame_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/msg_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/gray_dark" />

        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_gravity="right"
            android:src="@drawable/draw_redrounds" />
    </FrameLayout>

    <ImageView
        android:id="@+id/school_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/frame_msg"
        android:background="@color/gray_dark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/school_iv"
        android:layout_toRightOf="@+id/left_more_iv"
        android:background="@drawable/white_btn_bg"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColorHint="@color/gray_light"
        android:textSize="@dimen/text_size_12" />


</RelativeLayout>