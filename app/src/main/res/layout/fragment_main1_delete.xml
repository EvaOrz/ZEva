<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--tabbar-->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lisichen"
        android:padding="10dp">

        <ImageView
            android:id="@+id/toolbar_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_menu_more" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/toolbar_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_news" />

        <ImageView
            android:id="@+id/toolbar_city"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/toolbar_right"
            android:src="@mipmap/icon_school" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/body_bg"
            android:orientation="vertical">

            <!--banner-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/body_gray"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <cn.com.zwwl.bayuwen.widget.RoundAngleLayout
                    android:id="@+id/layout_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/body_gray_light"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <cn.com.zwwl.bayuwen.widget.CircleImageView
                        android:id="@+id/frag1_child_avatar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"

                        android:src="@drawable/avatar_placeholder" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_leaf" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学员积分"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_size_12" />

                </cn.com.zwwl.bayuwen.widget.RoundAngleLayout>


                <cn.com.zwwl.bayuwen.widget.LoopViewPager
                    android:id="@+id/frag1_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" />

                <cn.com.zwwl.bayuwen.widget.RoundAngleLayout
                    android:id="@+id/layout_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/body_gray_light"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <cn.com.zwwl.bayuwen.widget.CircleImageView
                        android:id="@+id/frag1_parent_avater"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/avatar_placeholder" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_medal_y" />

                    <TextView
                        android:id="@+id/frag1_parent_gongxun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="子爵"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家长功勋"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_size_12" />

                </cn.com.zwwl.bayuwen.widget.RoundAngleLayout>
            </LinearLayout>
            <!--calendar-->
            <LinearLayout
                android:id="@+id/go_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gold"
                android:orientation="vertical"
                android:padding="5dp">

                <cn.com.zwwl.bayuwen.widget.RoundAngleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/calendar_ri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/calendar_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:id="@+id/calendar_kecheng_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" />


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/arrow_right_gray" />

                </cn.com.zwwl.bayuwen.widget.RoundAngleLayout>
            </LinearLayout>

            <!--notification-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/body_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_warning_yellow" />

                <TextView
                    android:id="@+id/main_notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="重要通知:今天使用Fragment的时候，出现了这个错误 IllegalStateException: Can not perform this action after onSaveInstanceState"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_close" />

            </LinearLayout>
            <!--能力分析-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_analyze"
                        android:drawableStart="@mipmap/icon_analyze"
                        android:gravity="center_vertical"
                        android:text="@string/nenglifenxi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:text="语文基础知识"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <cn.com.zwwl.bayuwen.widget.threed.InfiniteViewPager
                    android:id="@+id/pingtu_pager"
                    android:layout_width="300dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:id="@+id/pingtu_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>


            <!--所获勋章-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_medal"
                    android:drawableStart="@mipmap/icon_medal"
                    android:gravity="center_vertical"
                    android:text="@string/suohuoxunzhang"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />



                <TextView
                    android:id="@+id/go_xunzhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gold_circle"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="查看全部勋章"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>