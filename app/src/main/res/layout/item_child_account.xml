<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <cn.com.zwwl.bayuwen.widget.RoundAngleLayout
        android:id="@+id/child_account_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/child_card_bg1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cn.com.zwwl.bayuwen.widget.CircleImageView
                android:id="@+id/child_account_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/avatar_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/child_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小小田"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <TextView
                    android:id="@+id/child_account_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小学二年级"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:src="@mipmap/child_edit_1" />


        </LinearLayout>

        <TextView
            android:id="@+id/child_account_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="NO：045010312"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_map" />

            <TextView
                android:id="@+id/child_account_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="北京"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

    </cn.com.zwwl.bayuwen.widget.RoundAngleLayout>

</LinearLayout>