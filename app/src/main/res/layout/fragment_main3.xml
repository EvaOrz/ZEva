<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/layout_gray_titlebar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/item_bgColor" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/praiseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/user_about"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/user_about"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:text="@string/studying_course"
                android:textColor="@color/body_gray"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/item_bgColor"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/on_course_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/user_about"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@mipmap/user_about"
                        android:text="庖丁阅读"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintEnd_toStartOf="@id/on_arrow"
                        app:layout_constraintStart_toStartOf="parent" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/on_progress_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="课程进度（9/16）"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintEnd_toStartOf="@id/on_arrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/on_course_name" />

                    <ProgressBar
                        android:id="@+id/on_progress"
                        style="@style/Jindu_progress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:max="100"
                        android:progress="50"
                        android:secondaryProgress="80"
                        app:layout_constraintEnd_toStartOf="@id/on_per"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/on_progress_value" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/on_per"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:text="56%"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintEnd_toStartOf="@id/on_arrow"
                        app:layout_constraintTop_toBottomOf="@id/on_progress_value" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/on_arrow"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:scaleType="center"
                        android:src="@mipmap/home_header_more"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/on_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_course_stage"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/text_size_12" />

                    <LinearLayout
                        android:id="@+id/layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/draw_gray_line_bg"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/on_status">

                        <cn.com.zwwl.bayuwen.view.PagerSlidingTabStrip
                            android:id="@+id/tab"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            app:pstsIndicatorColor="@color/gold"
                            app:pstsIndicatorHeight="3dp"
                            app:pstsSelectTextColor="@color/gold"
                            app:pstsTextColor="@color/body_gray"
                            app:pstsTextSize="@dimen/text_size_14"
                            android:padding="@dimen/dp_10"
                            app:pstsUnderlineHeight="0px"
                            app:pstsisMore="true" />

                        <android.support.v4.view.ViewPager
                            android:id="@+id/mViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/draw_gray_w_bg" />
                    </LinearLayout>


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/on_work"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/draw_gold_line"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/submit_homework"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toStartOf="@id/on_trace"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_1" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/on_trace"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/draw_gold_line"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/past_course_trace"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/on_work"
                        app:layout_constraintTop_toBottomOf="@id/layout_1" />
                </android.support.constraint.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/item_bgColor"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/off_course_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/user_about"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@mipmap/user_about"
                        android:text="庖丁阅读"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintEnd_toStartOf="@id/off_arrow"
                        app:layout_constraintStart_toStartOf="parent" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/off_progress_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="课程进度（9/16）"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintEnd_toStartOf="@id/off_arrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/off_course_name" />

                    <ProgressBar
                        android:id="@+id/off_progress"
                        style="@style/Jindu_progress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:max="100"
                        android:progress="50"
                        android:secondaryProgress="80"
                        app:layout_constraintEnd_toStartOf="@id/off_per"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/off_progress_value" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/off_per"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:text="56%"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/text_size_12"
                        app:layout_constraintEnd_toStartOf="@id/off_arrow"
                        app:layout_constraintTop_toBottomOf="@id/off_progress_value" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/off_arrow"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:scaleType="center"
                        android:src="@mipmap/home_header_more"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/off_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下次上课时间为XX.XX.XX"
                        android:textColor="@color/body_gray"
                        android:textSize="@dimen/text_size_12" />

                    <LinearLayout
                        android:id="@+id/layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/draw_gray_line_bg"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/off_status">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="@string/work_feedback"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/sp_14" />

                        <include layout="@layout/layout_line" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/feedback"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/draw_gray_w_bg"
                            android:padding="5dp"
                            android:text="顾问对学生的评价顾问对学生的评价顾问对学生的评价顾问对学生的评价顾问对学生的评价顾问对学生的评价顾问对学生的评价顾问对学生的评价顾问对学生的评价"
                            android:textColor="@color/body_gray"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/submit_work"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/draw_gold_line"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/submit_homework"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toStartOf="@id/offline_trace"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_2" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/offline_trace"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/draw_gold_line"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/past_course_trace"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/submit_work"
                        app:layout_constraintTop_toBottomOf="@id/layout_2" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/look_video"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/draw_gold_line"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/look_video"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/offline_trace" />
                </android.support.constraint.ConstraintLayout>


            </LinearLayout>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/user_info"
                android:drawableStart="@mipmap/user_info"
                android:padding="10dp"
                android:text="@string/finish_course"
                android:textColor="@color/body_gray"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>