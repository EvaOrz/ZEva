<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" />

        <include
            layout="@layout/view_no_wifi"
            android:visibility="gone" />

        <cn.com.zwwl.bayuwen.view.PlayController
            android:id="@+id/main_playcontroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/line" />

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/body_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bottom_nav_fm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_img1_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="4dp"
            android:text="@string/fm"
            android:textColor="@drawable/oringe_text_checked"
            android:textSize="@dimen/text_size_10" />

        <RadioButton
            android:id="@+id/bottom_nav_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/home_img2_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/user_center"
            android:textColor="@drawable/oringe_text_checked"
            android:textSize="@dimen/text_size_10" />


    </RadioGroup>

</LinearLayout>