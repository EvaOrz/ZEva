<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/drawable_trace_gradient"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/drawable_yellow_corner_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/user_about"
                android:drawableStart="@mipmap/user_about"
                android:gravity="center_vertical"
                android:text="@string/course_progress"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="课程编码: 123456"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toStartOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_name" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_graduate"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@mipmap/icon_graduate"
            android:text="授课老师: XXX"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_map"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@mipmap/icon_map"
            android:text="上课地点: XXX"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_calendar"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@mipmap/icon_calendar"
            android:text="上课日期: XXX"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_clock"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@mipmap/icon_clock"
            android:text="上课时间: XXX"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/drawable_yellow_corner_button"
            android:gravity="center"
            android:text="期末报告"
            android:textColor="@color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerInParent="true"
            android:background="@drawable/drawable_yellow_corner_button"
            android:gravity="center"
            android:text="期中报告"
            android:textColor="@color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/drawable_yellow_corner_button"
            android:gravity="center"
            android:text="欢迎致辞"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/split_line" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/seat_table" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sign_per"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="签到率: 23%"
            android:textColor="@color/gray_light" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/no_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="缺勤次数: 90次"
            android:textColor="@color/gray_light" />

        <View style="@style/split_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/course_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/split_line" />

        <android.support.v7.widget.AppCompatTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableEnd="@mipmap/arrow_right_gray"
            android:drawableLeft="@mipmap/icon_convert_course"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:drawableStart="@mipmap/icon_convert_course"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/tiaoke" />

        <View style="@style/split_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_covert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/split_line" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableEnd="@mipmap/arrow_right_gray"
            android:drawableLeft="@mipmap/icon_convert_class"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:drawableStart="@mipmap/icon_convert_class"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/zhuanban" />

        <View style="@style/split_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/split_line" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableEnd="@mipmap/arrow_right_gray"
            android:drawableLeft="@mipmap/icon_convert_class"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:drawableStart="@mipmap/icon_convert_class"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/seat_table" />

        <View style="@style/split_line" />
    </LinearLayout>
</LinearLayout>