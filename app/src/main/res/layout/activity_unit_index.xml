<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/month_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/icon_report"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/icon_report"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/month_report" />

    <View
        style="@style/split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/learning_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/icon_summary"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/icon_summary"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/learning_summary" />

    <View style="@style/split_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tutor_eval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

    <View
        style="@style/split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ppt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/icon_ppt"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/icon_ppt"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/course_ppt" />

    <View style="@style/split_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ppt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_line"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/drawable_video_gradient"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/look_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableEnd="@mipmap/arrow_right_gray"
                android:drawableRight="@mipmap/arrow_right_gray"
                android:gravity="center_vertical"
                android:text="@string/look_video"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_play" />
        </RelativeLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/class_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/bg_blackbord"
            android:drawableEnd="@mipmap/arrow_right_gray"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/book_class_status"
            android:textColor="@color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seat_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/bg_seat"
            android:drawableEnd="@mipmap/arrow_right_gray"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/seat_table"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/submit_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/icon_upload_work"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/icon_upload_work"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/submit_homework" />

    <View style="@style/split_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/homework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_vote_black"
        android:drawableStart="@mipmap/icon_vote_black"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/like_for" />

    <View style="@style/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/teacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/teacher_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        style="@style/split_line"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tutor_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        style="@style/split_line"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/adviser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/adviser_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/split_line" />
</LinearLayout>