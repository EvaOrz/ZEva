<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/month_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/home_head_hot"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/home_head_hot"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/study_report" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/learning_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/home_head_hot"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/home_head_hot"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/learning_summary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tutor_eval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="XXX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ppt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/home_head_hot"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/home_head_hot"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/course_ppt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ppt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_10">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/class_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            android:drawableEnd="@mipmap/home_header_more"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/home_header_more"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/book_class_status" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seat_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gold"
            android:drawableEnd="@mipmap/home_header_more"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/home_header_more"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/seat_table" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/submit_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableEnd="@mipmap/home_header_more"
        android:drawableLeft="@mipmap/home_head_hot"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/home_header_more"
        android:drawableStart="@mipmap/home_head_hot"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/submit_homework" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/homework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/home_head_hot"
        android:drawablePadding="@dimen/dp_10"
        android:drawableStart="@mipmap/home_head_hot"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/like_for" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@color/gray_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/adviser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dp_5"
        android:text="血液顾问:XXX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/gray_line" />
</LinearLayout>