<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_toolbar" android:id="@+id/top"/>
<android.support.v7.widget.AppCompatTextView
    android:layout_width="@dimen/dp_100"
    android:id="@+id/submit_result"
    android:drawableTop="@mipmap/ic_launcher"
    app:layout_constraintTop_toTopOf="@id/top"
    android:layout_marginTop="@dimen/dp_100"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:drawablePadding="@dimen/dp_20"
    android:gravity="center"
    android:text="申请提交成功\\n正在确认中"
    android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        app:layout_constraintTop_toBottomOf="@+id/submit_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="可联系您的孩子\\n专业学业顾问加快办理"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_yellow"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="返回课程追踪首页"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>