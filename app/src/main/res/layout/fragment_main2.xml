<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical"
    android:scrollbars="none">

    <cn.com.zwwl.bayuwen.widget.observable.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <cn.com.zwwl.bayuwen.widget.LoopViewPager
                android:id="@+id/frag2_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/frag2_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/frag2_look_teacher"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@mipmap/jiaoshi" />


                <ImageView
                    android:id="@+id/frag2_look_ban"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:src="@mipmap/banzhuren" />
            </LinearLayout>
        </LinearLayout>
    </cn.com.zwwl.bayuwen.widget.observable.ObservableScrollView>

    <include layout="@layout/layout_gray_titlebar" />

</FrameLayout>