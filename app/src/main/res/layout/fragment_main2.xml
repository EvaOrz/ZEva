<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/app_bgColor"
             android:orientation="vertical"
             android:scrollbars="none">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/user_background"/>
            </RelativeLayout>

            <cn.com.zwwl.bayuwen.widget.MostGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:columnWidth="100dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="4"
                android:padding="10dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"/>

            <cn.com.zwwl.bayuwen.view.IconCenterButton
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="点赞排行"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <include
                    android:id="@+id/teacher_layout"
                    layout="@layout/layout_main2_praise"/>

                <include
                    android:id="@+id/academicAdviso_layout"
                    layout="@layout/layout_main2_praise"/>

                <include
                    android:id="@+id/assistant_layout"
                    layout="@layout/layout_main2_praise"/>

            </LinearLayout>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/draw_cle_o_btn"
                android:text="查看全体教师"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <RelativeLayout
        android:id="@+id/main2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/left_more_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <cn.com.zwwl.bayuwen.view.IconCenterButton
            android:id="@+id/search_view"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/draw_search_bg"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/left_more_iv"
            android:drawableLeft="@mipmap/search_icon"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/search_tv_color"
            android:textSize="@dimen/sp_14"
            app:iconPadding="3dp" />

        <ImageView
            android:id="@+id/school_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/frame_msg"
            android:src="@mipmap/ic_launcher"/>


        <FrameLayout
            android:id="@+id/frame_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/msg_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="right"
                android:src="@drawable/draw_redrounds"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>