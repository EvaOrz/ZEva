<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <cn.com.zwwl.bayuwen.widget.roundview.RoundRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <cn.com.zwwl.bayuwen.widget.RoundAngleImageView
            android:id="@+id/frag4_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/frag4_album_trans_black"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="17538"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </cn.com.zwwl.bayuwen.widget.roundview.RoundRelativeLayout>

    <TextView
        android:id="@+id/frag4_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_size_12" />

</LinearLayout>