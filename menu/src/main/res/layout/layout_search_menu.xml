<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grade_li"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_101"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gradeTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:text="年级"
            android:textColor="@color/body_gray"
            android:textSize="@dimen/text_size_28_px"/>

        <ImageView
            android:id="@+id/img_sub_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@+id/subject"
            android:src="@mipmap/ic_down"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#e0e0e0"/>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_101"
        android:layout_below="@+id/grade_li"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="项目"
                android:textColor="@color/body_gray"
                android:textSize="@dimen/text_size_28_px"/>

            <ImageView
                android:id="@+id/img_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_toRightOf="@+id/subject"
                android:src="@mipmap/ic_down"/>
        </LinearLayout>

        <View
            android:id="@+id/line_sub"
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:layout_toRightOf="@+id/ll_subject"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:id="@+id/ll_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/line_sub"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comprehensive_sorting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:text="类型"
                android:textColor="@color/body_gray"
                android:textSize="@dimen/text_size_28_px"
                />

            <ImageView
                android:id="@+id/img_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_toRightOf="@+id/comprehensive_sorting"
                android:src="@mipmap/ic_down"/>
        </LinearLayout>

        <View
            android:id="@+id/line_cs"
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:layout_toRightOf="@+id/ll_sort"
            android:background="#e0e0e0"></View>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/line_cs"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="校区"
                android:textColor="@color/body_gray"
                android:textSize="@dimen/text_size_28_px"/>

            <ImageView
                android:id="@+id/img_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_toRightOf="@+id/screening"
                android:src="@mipmap/ic_down"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_tab"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:background="#88000000">
    </RelativeLayout>
</LinearLayout>

